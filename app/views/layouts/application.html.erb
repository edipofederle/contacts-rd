<!DOCTYPE html>
<html>
    <head>
        <title>ContactsRd</title>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>
    </head>
    <body>
        <%= current_user.email %> - <%= link_to "Sign out", destroy_user_session_path, method: :delete %><br/><br/>

        <div class="container">
            <% flash.each do |key, value| %>
                <div class="alert alert-<%= key %>">
                    <%= value %>
                </div>
            <% end %>
        </div>

        <%= yield %>

    </body>
</html>
